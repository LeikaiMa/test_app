<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="span 8">
			<h3>Micropost Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="center hero-unit">
		<h1>Welcome to Time Bank</h1>
		<h2>
			Share Time with Families, Groups and Comunities.
		</h2> 
		<%= link_to "Sign up now!", signup_path, 
								class: "btn btn-large btn-primary" %>
	</div>
	<%= link_to image_tag("TimeBank.jpg", alt: "Time Bank"), 'https://ancient-ocean-5584.herokuapp.com' %>
<% end %>	

